<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_colour"
    tools:context=".Activities.EditTaskActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_colour">

        <TextView
            android:id="@+id/editTasks"
            android:layout_width="409dp"
            android:layout_height="62dp"
            android:text="Edit Task"
            android:textAlignment="center"
            android:textColor="#000000"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editTaskTxTtextView"
            android:layout_width="113dp"
            android:layout_height="36dp"
            android:layout_marginTop="48dp"
            android:text="Task: "
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toStartOf="@+id/editTaskDesc"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTasks" />

        <TextView
            android:id="@+id/editStatusTexTtextView"
            android:layout_width="113dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:text="Status: "
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toStartOf="@+id/editStatusDesc"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTaskTxTtextView" />


        <TextView
            android:id="@+id/editTagTexTtextView"
            android:layout_width="113dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:text="Tag: "
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toStartOf="@+id/editTag"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStatusTexTtextView"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/editDeadLineTexTtextView"
            android:layout_width="409dp"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:text="   Deadline: "
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTagTexTtextView" />

        <TextView
            android:id="@+id/editPlannedTexTtextView"
            android:layout_width="409dp"
            android:layout_height="37dp"
            android:layout_marginTop="12dp"
            android:text="   Planned Date:"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTimeDuetextView" />

        <TextView
            android:id="@+id/editDateDuetextView"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="Date: "
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toStartOf="@+id/editDueDateButton"
            app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDeadLineTexTtextView" />

        <TextView
            android:id="@+id/editDatePlannedtextView"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:text="Date: "
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toStartOf="@+id/editPlannedDateButton"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPlannedTexTtextView" />

        <TextView
            android:id="@+id/editTimeDuetextView"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Time: "
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toStartOf="@+id/editDueTimeButton"
            app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDateDuetextView" />


        <TextView
            android:id="@+id/editTimePlannedtextView2"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:text="Time: "
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintBottom_toTopOf="@+id/editButton"
            app:layout_constraintEnd_toStartOf="@+id/editPlannedTimeButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDatePlannedtextView"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/editTag"
            android:layout_width="285dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:autofillHints="Tag"
            android:ems="10"
            android:textColor="#000000"
            android:hint="e.g CS1101S/Personal"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="7sp"
            android:inputType="none"
            app:layout_constraintBottom_toTopOf="@+id/editDeadLineTexTtextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStatusDesc"
            app:layout_constraintVertical_bias="0.2" />

        <EditText
            android:id="@+id/editTaskDesc"
            android:layout_width="285dp"
            android:layout_height="48dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="8dp"
            android:autofillHints="Task"
            android:ems="10"
            android:textColor="#000000"
            android:hint="Enter description of task"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="7sp"
            android:inputType="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTasks" />

        <SeekBar
            android:id="@+id/editStatusDesc"
            android:layout_width="214dp"
            android:layout_height="53dp"
            android:layout_marginTop="4dp"
            android:autofillHints="Status"
            android:max="100"
            android:progress="0"
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/textViewStatus"
            app:layout_constraintTop_toBottomOf="@+id/editTaskDesc" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="71dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:textColor="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTaskDesc" />

        <Button
            android:id="@+id/editDueDateButton"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#DCCFB5"
            android:ems="10"
            android:inputType="date"
            android:text="Due Date Here"
            android:textColor="#6E6464"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDeadLineTexTtextView" />

        <Button
            android:id="@+id/editPlannedDateButton"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#DCCFB5"
            android:ems="10"
            android:text="Planned Date Here"
            android:inputType="date"
            android:textColor="#6E6464"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPlannedTexTtextView" />

        <Button
            android:id="@+id/editDueTimeButton"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#DCCFB5"
            android:ems="10"
            android:text="Due Time Here"
            android:inputType="datetime"
            android:textColor="#6E6464"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/editPlannedTexTtextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDueDateButton"
            app:layout_constraintVertical_bias="0.285" />


        <Button
            android:id="@+id/editPlannedTimeButton"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:autofillHints="Status"
            android:ems="10"
            android:text="Planned Time Here"
            android:inputType="datetime"
            android:textColor="#6E6464"
            android:textStyle="bold"
            android:backgroundTint="#DCCFB5"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPlannedDateButton"
            app:layout_constraintVertical_bias="0.062" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="119dp"
            android:layout_height="51dp"
            android:layout_marginBottom="52dp"
            android:text="Save Task"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeMinTextSize="8sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPlannedTimeButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
